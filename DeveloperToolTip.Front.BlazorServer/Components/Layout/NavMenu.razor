
<div class="menu-header d-flex align-items-center">
    <span class="govco-list-ul me-2"></span>
    <h4 id="wiki-title" class="mb-0">Main Menu</h4>
</div>


<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="@NavMenuCssClass nav-scrollable" onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="home" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="classifiers/ClassifierDashBoard" @onclick="() => ToggleSubMenu(1)">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Classifiers
            </NavLink>
            @if (showSubMenu[1])
            {
                <nav class="flex-column">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="classifiers/DeveloperRole">
                            <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Roles
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="classifiers/TopicCategory">
                            <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Categories
                        </NavLink>
                    </div>
                </nav>
            
            }
        </div>

    </nav>
</div>

@code {
    bool[] showSubMenu = new bool[3];
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu() {

        collapseNavMenu = !collapseNavMenu;

    }

    void ToggleSubMenu(int index) {
        for (int i = 0; i < showSubMenu.Length; i++) {
            if (i == index)
            {
                showSubMenu[i] = !showSubMenu[i];
            }
            else 
            {
                showSubMenu[i] = false;
            }
        }
    }
}



