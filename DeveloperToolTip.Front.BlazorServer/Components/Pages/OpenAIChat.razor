@page "/OpenAIChat"

@using DeveloperToolTip.Front.BlazorServer.Services

@inject IOpenAIService _IOpenAIService;

<div class="container mt-4">
    <h2 class="text-center mb-4">OpenAI Chat</h2>

    <!-- Formulario de entrada -->
    <div class="card shadow-sm">
        <div class="card-body">
            <form @onsubmit="HandleChatAsync">
                <div class="mb-3">
                    <label for="userInput" class="form-label">Pregunta</label>
                    <textarea id="userInput" class="form-control" rows="3" @bind="UserInput" placeholder="Escribe tu pregunta..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
        </div>
    </div>

    <!-- Respuesta del chatbot -->
    @if (!string.IsNullOrEmpty(Response))
    {
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-info text-white">
                Respuesta de OpenAI
            </div>
            <div class="card-body">
                <p class="card-text">@Response</p>
            </div>
        </div>
    }
</div>

@code {
    private string UserInput { get; set; } = string.Empty;
    private string Response { get; set; } = string.Empty;

    private async Task HandleChatAsync()
    {
        if (!string.IsNullOrEmpty(UserInput))
        {
            // Aquí llamamos al servicio de OpenAI para obtener la respuesta
            //"Respuesta generada por OpenAI API!";
            Response = await _IOpenAIService.SendRequestAsync(UserInput);
            UserInput = string.Empty; // Limpiar el campo de entrada
        }
    }
}
