@page "/OpenAIChat"

@using DeveloperToolTip.Front.BlazorServer.Services

@inject IOpenAIService _IOpenAIService;

<div class="card">
    <div class="card-header bg-primary text-white">
        Chat con OpenAI
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label for="prompt" class="form-label">Tu pregunta:</label>
            <textarea id="prompt" class="form-control" @bind="Prompt"></textarea>
        </div>
        <button class="btn btn-primary" @onclick="SendRequest">Enviar</button>

        <div class="mt-4">
            <h5>Historial:</h5>
            <ul class="list-group">
                @foreach (var item in ChatHistory)
                {
                    <li class="list-group-item">
                        <strong>Pregunta #@item.Number:</strong> @item.Question <br />
                        <strong>Respuesta:</strong> @item.Answer
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

@code {
    private string Prompt { get; set; } = string.Empty;
    private List<ChatItem> ChatHistory { get; set; } = new();

    private async Task SendRequest()
    {
        if (!string.IsNullOrWhiteSpace(Prompt))
        {
            try
            {
                // Realizar la solicitud a OpenAI
                var response = await _IOpenAIService.SendRequestAsync(Prompt);

                // Agregar la pregunta y respuesta al historial
                ChatHistory.Add(new ChatItem
                    {
                        Number = ChatHistory.Count + 1,
                        Question = Prompt,
                        Answer = response
                    });

                // Limpiar el prompt
                Prompt = string.Empty;
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error al procesar la solicitud: {ex.Message}");
            }
        }
    }

    private class ChatItem
    {
        public int Number { get; set; }
        public string Question { get; set; }
        public string Answer { get; set; }
    }

}
